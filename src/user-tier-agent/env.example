# Environment Configuration for User Tier Agent
# Copy this file to .env and update values as needed

# Service Configuration
HOST=0.0.0.0
PORT=8080
LOG_LEVEL=INFO
VERSION=v1.0.0

# LLM Configuration
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=30

# Database URLs
LEDGER_DB_URL=http://ledger-db:8080
QUEUE_DB_URL=http://queue-db:8080
PORTFOLIO_DB_URL=http://portfolio-db:8080

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379
CACHE_TTL=300

# Default Allocations
DEFAULT_TIER1_PERCENTAGE=20
DEFAULT_TIER2_PERCENTAGE=30
DEFAULT_TIER3_PERCENTAGE=50
DEFAULT_TRANSACTION_HISTORY_LIMIT=100

# Performance Configuration
CONNECTION_POOL_SIZE=10
MAX_RETRIES=3
RETRY_DELAY=1
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
RATE_LIMIT_PER_MINUTE=60
